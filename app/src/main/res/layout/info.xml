<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.MyPageFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="#825E4D"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FEE7B6"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="188dp"
        android:layout_height="88dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/topbar" />


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<!--
            <ImageView
                android:id="@+id/imageViewGif"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
-->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="\n통합 지도앱에는 프랜차이즈 빵집들만 가득...\n가고 싶은 빵집을 찾기 힘들어 불편하셨나요?\n\n" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="유명 빵집부터 숨겨진 동네 빵집까지!\n오직 빵집만을 위한 앱, 빵맵에서 확인하세요.\n\n"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="235dp"
                app:srcCompat="@drawable/map" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="\n\n빵맵소개\n\n빵집소개합니다\n어쩌구저쩌구 소개멘트\n저쩌구 저쩌구 소개멘트입니다.\n좀 더 길게 써야합니다.\n\n문단도 바꿔봅니다.\n이 정도면 스크롤이 될 길이일까요?\n혹시 모르니 복붙 몇 번 할게요.\n\n어쩌구저쩌구 소개멘트\n저쩌구 저쩌구 소개멘트입니다.\n어쩌구저쩌구 소개멘트\n저쩌구 저쩌구 소개멘트입니다.\n\n문단도 바꿔봅니다.\n이 정도면 스크롤이 될 길이일까요?\n혹시 모르니 복붙 몇 번 할게요.\n\n" />

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>